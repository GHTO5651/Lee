    <div id="postList" class="list-group mb-4"></div>

    <!-- ê¸€ ìƒì„¸ ë³´ê¸° -->
    <div id="postDetail" class="card shadow-sm mb-4" style="display: none;">
      <div class="card-body">
        <h3 id="detailTitle"></h3>
        <p id="detailContent" style="white-space: pre-wrap;"></p>
      </div>
